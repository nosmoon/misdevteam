<xhtml:html xmlns:ex="http://www.comsquare.co.kr/xforms/excel" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xhtml="http://www.w3.org/1999/xhtml" xmlns:ms="urn:schemas-microsoft-com:xslt" xmlns:my="http://www.comsquare.co.kr/example" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://www.w3.org/2002/01/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:cs="http://www.comsquare.co.kr/xforms">
	<xhtml:head>
		<xhtml:title>CIIS</xhtml:title>
		<model id="model1">
			<instance id="instance1">
				<root xmlns="">
					<codeData>
					</codeData>
					<reqData>
						<major/>
					</reqData>
					<resData>
						<gridData1>
							<record>
								<cd/>
								<cdnm/>
							</record>
						</gridData1>
						<gridData2>
							<record>
								<major/>
								<cd/>
								<cdnm/>
							</record>
						</gridData2>
					</resData>
					<initData>
						<pageInfo/>
					</initData>
					<formData>
					</formData>
					<tempData/>
				</root>
			</instance>
			<script type="javascript" ev:event="xforms-ready">
				<![CDATA[
				model.send("ad_co_1100_l");
				]]>
			</script>
			<submission id="ad_co_1100_l" action="/ad/common/1100" mediatype="application/x-www-form-urlencoded" method="post" resultref="/root/resData"/>
			<submission id="ad_co_1101_l" action="/ad/common/1101" mediatype="application/x-www-form-urlencoded" method="post" ref="/root/reqData/major" resultref="/root/resData/gridData2"/>
		</model>
		<script type="javascript" src="/js/TFCommon.js"/>
		<script type="javascript" src="/js/CIISComm.js"/>
		<script type="javascript" src="/js/ad_common.js"/>
	</xhtml:head>
	<xhtml:body pagewidth="640" pageheight="480" guideline="1,10;1,630;" style="font-family:돋움; font-size:12px; ">
		<button id="button7" class="btn03" style="left:496px; top:10px; width:63px; height:21px; ">
			<caption>선택</caption>
			<script type="javascript" ev:event="onclick">
				<![CDATA[			
					var type_clsf    = datagrid2.valueMatrix(datagrid2.row, 1);	
					var type_clsf_nm = datagrid2.valueMatrix(datagrid2.row, 2);		
					
					opener.javascript.setType(type_clsf, type_clsf_nm);
					window.close();
					
				]]>
			</script>
		</button>
		<datagrid id="datagrid1" nodeset="/root/resData/gridData1/record" caption="코드^유형구분" colsep="^" colwidth="70, 100" extendlastcol="scroll" mergecellsfixedrows="bycolrec" rowsep="|" style="left:10px; top:61px; width:200px; height:409px; ">
			<col ref="cd"/>
			<col ref="cdnm" style="text-align:left; "/>
			<script type="javascript" ev:event="ondblclick">
				<![CDATA[
				]]>
			</script>
			<script type="javascript" ev:event="onclick">
				<![CDATA[
					if(!isDataRegion(datagrid1)) return;
					
					var major = datagrid1.valueMatrix(datagrid1.row, datagrid1.colRef("cd"));
					model.setValue("/root/reqData/major", major);
					model.send("ad_co_1101_l");
					model.refresh();				
				]]>
			</script>
		</datagrid>
		<caption id="subtitle" class="tit02" style="left:10px; top:39px; width:130px; height:20px; ">대분류</caption>
		<caption id="caption1" class="tit02" style="left:220px; top:39px; width:130px; height:20px; ">소분류</caption>
		<datagrid id="datagrid2" nodeset="/root/resData/gridData2/record" caption="대분류^소분류코드^유형구분" colsep="^" colwidth="133, 80, 119" extendlastcol="scroll" mergecells="byrowrec" mergecellsfixedrows="bycolrec" rowsep="|" style="left:220px; top:61px; width:410px; height:409px; ">
			<col ref="major" style="text-align:left; "/>
			<col ref="cd"/>
			<col ref="cdnm" style="text-align:left; "/>
			<script type="javascript" ev:event="ondblclick">
				<![CDATA[
					if(!isDataRegion(datagrid2)) return;
					var type_clsf    = datagrid2.valueMatrix(datagrid2.row, datagrid2.colRef("cd"));	
					var type_clsf_nm = datagrid2.valueMatrix(datagrid2.row, datagrid2.colRef("cdnm"));		
					
					opener.javascript.setType(type_clsf, type_clsf_nm);
					window.close();
				]]>
			</script>
		</datagrid>
		<button id="button1" class="btn03" style="left:426px; top:10px; width:63px; height:21px; ">
			<caption>전체보기</caption>
			<script type="javascript" ev:event="onclick">
				<![CDATA[			
					model.send("ad_co_1100_l");		
				]]>
			</script>
		</button>
		<caption id="maintitle" class="tit01" style="left:10px; top:5px; width:350px; height:27px; ">유형구분</caption>
		<button id="button2" class="btn03" style="left:566px; top:10px; width:63px; height:21px; ">
			<caption>종료</caption>
			<script type="javascript" ev:event="onclick">
				<![CDATA[
					window.close();				
				]]>
			</script>
		</button>
	</xhtml:body>
</xhtml:html>
