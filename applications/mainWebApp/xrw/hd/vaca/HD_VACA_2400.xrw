				//yyyymmdd형태 리턴
				function formatYYYYMMDD(year,month,day){
					var v_year = year;
					var v_month = month;
					v_month = v_month.length==1?"0"+v_month:v_month;
					var v_day = day
					v_day = v_day.length==1?"0"+v_day:v_day;
					return v_year+""+v_month+""+v_day;
				}
				
