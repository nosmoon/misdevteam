					use_vaca_dds	=  model1.getValue("/root/vacaData/use_vaca_dds");	//사용휴가일수
					duty_vaca_dds	=  model1.getValue("/root/vacaData/duty_vaca_dds");	//의무휴가일수
					rmn_vaca_dds	=  model1.getValue("/root/vacaData/rmn_vaca_dds");	//잔여휴가일수
					
