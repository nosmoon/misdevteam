				}
				
				function setReaderInfo()
				{
					if(event.button == 1)
					{
						var resPath = model.property("DUPCHECK_RES_XPATH");
	
						window.opener.javaScript.remakeNode(resPath);
						window.opener.javaScript.makeValueNode(resPath+"/rdr_no", curRowRefColValue(datagrid1, "rdr_no"));
					
						close();
					}
				}
								
				function close()
				{
					window.close();
				}
			]]>
