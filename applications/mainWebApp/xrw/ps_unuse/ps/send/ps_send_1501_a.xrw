					model.setValue("/root/reqData/searchData/reqform/detail_form/brchdt",  PID1501datagrid1.textMatrix(PID1501datagrid1.row, PID1501datagrid1.colRef("senddt")));
								
					remakeNode("/root/tempData/dataTemp");
