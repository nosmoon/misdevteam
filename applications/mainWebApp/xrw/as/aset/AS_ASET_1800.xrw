			<script type="javascript" ev:event="onclick">
				<![CDATA[
					var selectedIdx = datagrid1.row;
					model1.setValue("/root/reqData/reqForm/close_yymm" , model1.getValue("/root/resData/gridData/record["+ selectedIdx +"]/close_yymm") );
					model1.refresh();
					
				]]>
			</script>
