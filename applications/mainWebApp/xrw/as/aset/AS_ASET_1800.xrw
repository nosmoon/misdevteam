		<group id="group_tab" class="gro_tab1" style="left:521px; top:113px; width:284px; height:52px; ">
			<caption id="caption12" class="list_cap02" style="left:85px; top:0px; width:175px; height:26px; "/>
			<caption id="caption11" class="list_cap03" style="left:0px; top:0px; width:110px; height:26px; ">마감년월</caption>
			<input id="input1" ref="/root/reqData/reqForm/close_yymm" class="req" inputtype="date" maxlength="6" format="yyyy-mm" caption="마감년월" style="left:114px; top:4px; width:86px; height:18px; background-color:#ffffcc; "/>
		</group>
		<group id="group_btnA" class="gro_btn" style="left:10px; top:41px; width:926px; height:21px; ">
			<button id="btnA1" class="btn03" style="left:740px; top:0px; width:67px; height:21px; ">
				<caption>월마감입력</caption>
				<script type="javascript" ev:event="onclick">
					<![CDATA[
						if (commReqCheck(group_tab)) {
							//마감년월 자릿수 체크.
							var close_yymm = input1.value;
							if ( close_yymm.length < "6" ) {
								alert("마감년월을 정확히 입력하세요");
								return;
							}
							
							//마감년월이 유효한지 체크.
							var nowText = model1.getValue("/root/reqData/reqForm/close_yymm");
							alert("마감년월:"+nowText);
							if ( datagrid1.valueMatrix(1 ,2).substring(0,1) == "N" ) {
								if ( nowText != datagrid1.valueMatrix(1,1) ) {
									alert("유효한 마감월을 입력 해 주시기 바랍니다.\n(진행중인 마감작업을 진행하시기 바랍니다.)");
									return;
								}
							}
							if ( datagrid1.valueMatrix(1,2).substring(0,1) == "Y" ) {
								var yyyy = datagrid1.valueMatrix(1,1).substring(0,4);
								var mm  = datagrid1.valueMatrix(1,1).substring(4,6);

								if ( parseFloat(mm) == 12 ){ //12월일 경우
									mm = "01";
									yyyy = parseFloat(yyyy) + 1;
								}else{
									if ( parseFloat(mm) > 8 ) { //10월,11월 일경우
										mm = parseFloat(mm) + 1;
									}else{
										mm = "0" + (parseFloat(mm) + 1);
									}
								}
								var close_yymm = yyyy + mm;
								
								if ( nowText != close_yymm ) {
									alert("유효한 마감월을 입력 해 주시기 바랍니다.\n(마감월은 순차적으로만 입력이 가능합니다.)"+datagrid1.valueMatrix(1,1).substring(4,6)+":"+close_yymm+":"+nowText + ":"+yyyy+":"+parseFloat(mm));
									return;
								}
							}
							
							//신규월마감할때 이전월마감의 감가상각여부가 미상각(N)이면 신규월마감 불가.
							if ( model1.getValue("/root/reqData/reqForm/close_yymm") > datagrid1.valueMatrix(1,1) &&
							datagrid1.valueMatrix(1,2).substring(0,1) == "Y" && datagrid1.valueMatrix(1,3).substring(0,1) == "N" ) {
								alert("감가상각(마감)이 완료 되어야 신규 월마감이 가능합니다.");
								return;
							}
							
							
							if (window.alert("월마감 입력하시겠습니까?", "확인", 1) == 1) {
								model1.setValue("/root/reqData/reqForm/mode" , "I");
								model1.send("as_aset_1802");
								
								if(submit_completed()) { //서브밋 성공시
									//조회한다.
									model1.send("as_aset_1801");
									model1.copyNode("/root/resData/gridData" , "/root/tempData/dataSet/CURLIST");
									model1.removeNodeset("/root/tempData/dataSet");
									model1.setValue("/root/reqData/reqForm/close_yymm" , "");
									model1.refresh();
									
									//마감년월 초기값 세팅.(그리드 맨윗줄이 마감일경우 1달후 값을 세팅하고 마감취소일 경우 마감년월의 값을 그대로 세팅한다.
									var close_yn = datagrid1.valueMatrix(1,2);


									if ( close_yn.substring(0,1) == "Y" ) { //그리드 맨윗줄이 마감일 경우 
										var close_yymm_tmp = datagrid1.valueMatrix(1,1);
										var close_yy = close_yymm_tmp.substring(0,4);
										var close_mm = close_yymm_tmp.substring(4,6);
/*										
										if ( close_mm == "12" ){ //12월일 경우
											close_mm = "01";
											close_yy = parseInt(close_yy) + 1;
											model1.setValue("/root/reqData/reqForm/close_yymm" , close_yy + close_mm );
											model1.setValue("/root/reqData/reqForm/close_yymm2" , model1.getValue("/root/reqData/reqForm/close_yymm") );
											model1.refresh();
										}else{ //12월이 아닌경우
											if ( close_mm > "9" ) { //10월,11월 일경우
												close_mm = parseInt(close_mm) + 1;
											}else{ //10월,11월이 아닌경우
												close_mm = "0" + (parseInt(close_mm) + 1);
											}
											model1.setValue("/root/reqData/reqForm/close_yymm" , close_yy + close_mm );
											model1.setValue("/root/reqData/reqForm/close_yymm2" , model1.getValue("/root/reqData/reqForm/close_yymm") );
											model1.refresh();
										}
*/
											model1.setValue("/root/reqData/reqForm/close_yymm" , close_yy + close_mm );
											model1.setValue("/root/reqData/reqForm/close_yymm2" , model1.getValue("/root/reqData/reqForm/close_yymm") );
											model1.refresh();										
									}
									
									if ( close_yn.substring(0,1) == "N" ) { //그리드 맨윗줄이 마감취소일 경우 
										model1.setValue("/root/reqData/reqForm/close_yymm" , datagrid1.valueMatrix(1,1) );
										model1.refresh();
									}
								}
							}
						}
					]]>
				</script>
			</button>
			<button id="btnA2" class="btn03" style="left:807px; top:0px; width:67px; height:21px; ">
				<caption>월마감취소</caption>
				<script type="javascript" ev:event="onclick">
					<![CDATA[
						if ( model1.getValue("/root/reqData/reqForm/close_yymm") == "" ) {
							alert("월마감 취소 할 항목이 없습니다.\n'조회'를 하신 후 마감취소할 항목을 선택하십시오.");
							return;
						}
					
						if (commReqCheck(group_tab)) {
							//마감년월 자릿수 체크.
							var close_yymm = input1.value;
							if ( close_yymm.length < "6" ) {
								alert("마감년월을 정확히 입력하세요");
								return;
							}
							
							//최종 월마감건이 아니면 월마감 취소불가.
							var i = datagrid1.row;
							if ( datagrid1.valueMatrix(i,1) < datagrid1.valueMatrix(1,1) ) {
								alert("최종 월마감건만 취소 가능합니다.");
								return;
							}
							
							//감가상각여부가 미상각(N)이면 취소불가.
							if ( datagrid1.valueMatrix(1,3).substring(0,1) == "Y" ) {
								alert("감가상각된 자료는 마감취소 할수 없습니다");
								return;
							}
							
							//최근자료가 마감취소 일때 마감취소 불가.
							if ( datagrid1.valueMatrix(1,2).substring(0,1) == "N" ) {
								alert("마감취소된 자료는 마감취소 할수 없습니다");
								return;
							}
							
							if (window.alert("월마감 취소하시겠습니까?", "확인", 1) == 1) {
								model1.setValue("/root/reqData/reqForm/mode" , "U");
								model1.send("as_aset_1802");
								
								if(submit_completed()) { //서브밋 성공시
									//조회한다.
									model1.send("as_aset_1801");
									model1.copyNode("/root/resData/gridData" , "/root/tempData/dataSet/CURLIST");
									model1.removeNodeset("/root/tempData/dataSet");
									model1.setValue("/root/reqData/reqForm/close_yymm" , "");
									model1.refresh();
									
									//마감년월 초기값 세팅.(그리드 맨윗줄이 마감일경우 1달후 값을 세팅하고 마감취소일 경우 마감년월의 값을 그대로 세팅한다.
									var close_yn = datagrid1.valueMatrix(1,2);
									if ( close_yn.substring(0,1) == "Y" ) { //그리드 맨윗줄이 마감일 경우 
										var close_yymm_tmp = datagrid1.valueMatrix(1,1);
										var close_yy = close_yymm_tmp.substring(0,4);
										var close_mm = close_yymm_tmp.substring(4,6);
										if ( parseFloat(close_mm) == 12 ){ //12월일 경우
											close_mm = "01";
											close_yy = parseFloat(close_yy) + 1;
											model1.setValue("/root/reqData/reqForm/close_yymm" , close_yy + close_mm );
											model1.setValue("/root/reqData/reqForm/close_yymm2" , model1.getValue("/root/reqData/reqForm/close_yymm") );
											model1.refresh();
										}else{
											if ( parseFloat(close_mm) > 9 ) { //10월,11월 일경우
												close_mm = parseFloat(close_mm) + 1;
											}else{
												close_mm = "0" + (parseFloat(close_mm) + 1);
											}
											model1.setValue("/root/reqData/reqForm/close_yymm" , close_yy + close_mm );
											model1.setValue("/root/reqData/reqForm/close_yymm2" , model1.getValue("/root/reqData/reqForm/close_yymm") );
											model1.refresh();
										}
									}
									if ( close_yn.substring(0,1) == "N" ) { //그리드 맨윗줄이 마감취소일 경우 
										model1.setValue("/root/reqData/reqForm/close_yymm" , datagrid1.valueMatrix(1,1) );
										model1.refresh();
									}
								}
							}
						}
					]]>
				</script>
			</button>
			<button id="btnClose" class="btn02" style="left:874px; top:0px; width:52px; height:21px; ">
				<caption>종료</caption>
				<script type="javascript" ev:event="onclick">
					<![CDATA[
						formClose();
					]]>
				</script>
			</button>
		</group>
