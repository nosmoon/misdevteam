<?xml version="1.0" encoding="EUC-KR"?>
<?xml-stylesheet type="text/css" href="../../../css/style_sheet.css" ?>
<xhtml:html xmlns:ex="http://www.comsquare.co.kr/xforms/excel" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xhtml="http://www.w3.org/1999/xhtml" xmlns:ms="urn:schemas-microsoft-com:xslt" xmlns:my="http://www.comsquare.co.kr/example" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://www.w3.org/2002/01/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:cs="http://www.comsquare.co.kr/xforms">
	<xhtml:head>
		<xhtml:title>Untitle</xhtml:title>
		<model id="model1">
			<instance id="instance1">
				<root xmlns="">
					<initData>
						<!-- 화면 로딩시의 초기 데이터를 담당 -->
						<session/>
						<!-- 서버의 세션 정보를 담당한다 -->
						<comboSet>
							<fac_clsf>
								<item>
									<value/>
									<label/>
								</item>
							</fac_clsf>
						</comboSet>
						<!-- 콤보리스트와 같은 선택게열의 데이터는 <item>을 반복함으로써 list를 구성한다. -->
						<pageInfo>
							<!-- 해당 화면의 필요한 기타 정보들을 추가운영 할 수 있다 -->
						</pageInfo>
						<!-- 해당 화면의 필요한 기타 정보들을 추가운영 할 수 있다 -->
					</initData>
					<reqData>
						<!-- 전달하고자 하는 데이터를 담당 ( submit 함수에서 처리) -->
						<searchData>
							<occr_dt/>
							<seq/>
						</searchData>
						<!-- 검색조건 처리 -->
						<reqForm/>
						<!-- formData 팝업,화면전환시 data이동시 -->
						<!-- MultiUpDate유형 사용시 처리 -->
						<fwdData>
							<file_path/>
							<ext/>
						</fwdData>
					</reqData>
					<resData>
						<!-- 전달 받은 데이터를 담당 ( submit의 결과가 담김) -->
						<resForm>
							<selectCnt/>
							<arvyul/>
							<pajiyul/>
						</resForm>
						<!-- 전달 받은 formData를 담당 ( submit의 결과가 담김) -->
						<!-- 전달 받은 데이터를 가공할 임시저장소 ( submit의 결과가 담김) -->
						<!-- 전달 받은 errorCode를 담당 ( submit의 결과가 담김) -->
						<msg/>
						<!-- 전달 받은 errorMsg를 담당 ( submit의 결과가 담김) -->
						<gridData>
							<CURLIST>
								<record>
									<occr_dt/>
									<seq/>
									<add_file_no/>
									<add_file_nm/>
								</record>
							</CURLIST>
						</gridData>
					</resData>
					<tempData/>
				</root>
			</instance>
			<script type="javascript" src="/js/CIISComm.js"/>
			<script type="javascript">
				<![CDATA[
			
				
				function loadList(){

					model1.send("mt_commatr_6110_l");
					model1.copyNode("/root/resData/gridData/CURLIST","/root/tempData/dataSet/CURLIST");
					model1.refresh();
					
	

						 
					
					
					
					
				}
				
				
				]]>
			</script>
			<script type="javascript" ev:event="xforms-ready">
				<![CDATA[
					
					model1.copyNode("/root/reqData/searchData", parent.root.reqData.mdichild);
					model1.refresh();
					
					loadList();	
					
				]]>
			</script>
			<submission id="mt_commatr_6110_l" action="/mt/commatr/6110" mediatype="application/x-www-form-urlencoded" method="post" ref="/root/reqData/searchData" resultref="/root/tempData/dataSet"/>
			<script type="javascript" src="/js/CIISComm.js"/>
			<script type="javascript" src="/js/TFCommon.js"/>
		</model>
	</xhtml:head>
	<xhtml:body class="main" pagewidth="305" pageheight="290" guideline="2,50;2,69;1,906;" style="font-family:굴림; ">
		<button id="btnA4" class="btn02" style="left:245px; top:48px; width:52px; height:21px; ">
			<caption>종료</caption>
			<script type="javascript" ev:event="onclick">
				<![CDATA[
					window.close();
				]]>
			</script>
		</button>
		<caption id="maintitle" class="tit01" style="left:10px; top:5px; width:280px; height:27px; ">첨부문서</caption>
		<datagrid id="datagrid1" nodeset="/root/resData/gridData/CURLIST/record" caption="^^^파일명" colsep="#" colwidth="285, 100, 100, 100" mergecellsfixedrows="bycolrec" rowsep="|" style="left:10px; top:80px; width:275px; height:190px; ">
			<col ref="occr_dt" visibility="hidden"/>
			<col ref="seq" visibility="hidden"/>
			<col ref="add_file_no" visibility="hidden"/>
			<col ref="add_file_nm"/>
			<script type="javascript" ev:event="ondblclick">
				<![CDATA[						
													
							
							if(datagrid1.col == datagrid1.colRef("add_file_nm")){
								if(datagrid1.valueMatrix(datagrid1.row, datagrid1.colRef("add_file_nm")) != ""){
									
									makeNodeValue("/root/tempData/occr_dt", datagrid1.valueMatrix(datagrid1.row, datagrid1.colRef("occr_dt")));	
									makeNodeValue("/root/tempData/seq", datagrid1.valueMatrix(datagrid1.row, datagrid1.colRef("seq")));	
									makeNodeValue("/root/tempData/add_file_no", datagrid1.valueMatrix(datagrid1.row, datagrid1.colRef("add_file_no")));		
					
									
									var uri; 
									 uri=document.location; 
									 uri=uri.split("//"); 
									 uri=uri[0]+"//"+uri[1].substr(0,uri[1].indexOf("/")); 
									
									var fileName = datagrid1.valueMatrix(datagrid1.row, datagrid1.colRef("add_file_nm"));
									
									ext = fileName.substring(fileName.lastIndexOf(".") , fileName.length );
									model.setValue("/root/reqData/fwdData/ext", ext);
									
									//var file = window.fileDialog("save","","",fileName,"*.*","All Files (*.*)|*.*");
									//alert( file);
									var fso 		= new ActiveXObject("Scripting.FileSystemObject");
									
									if (! fso.FolderExists("C:\\CHOSUN")) {      
										fso.createFolder("C:\\CHOSUN");						    
									}
									
									if (! fso.FolderExists("C:\\CHOSUN\\DOWNLOAD\\")) {      
										fso.createFolder("C:\\CHOSUN\\DOWNLOAD\\");						    
									}
									
									
									var file = "C:\\CHOSUN\\DOWNLOAD\\"+fileName;
									
									
									model.setValue("/root/reqData/fwdData/file_path",file);
									//alert(file+"_1");
									if(file!=""){
										var params = "&occr_dt=" + datagrid1.valueMatrix(datagrid1.row, datagrid1.colRef("occr_dt"))
												  +	"&seq=" + datagrid1.valueMatrix(datagrid1.row, datagrid1.colRef("seq"))
												  +	"&add_file_gb=" + "W"
												  +	"&add_file_no=" + datagrid1.valueMatrix(datagrid1.row, datagrid1.colRef("add_file_no"));
										model.download(uri+"/mt/commatr/6120?"+params, file, false);
										//if(submit_completed()) {
											
											//window.exec("WINWORD.exe", file);
											//window.exec("mspaint.exe", file);
											//window.exec("excel.exe", file);
											
											
										//}
									}
								}else{
									alert("다운받을 파일이 없습니다.");
								}
								

							}
						]]>
			</script>
		</datagrid>
		<script type="javascript" ev:event="onenddownload">
			<![CDATA[
				
				//alert("파일 다운로드 완료!");
				var ext = model.getValue("/root/reqData/fwdData/ext");  
				var file_path = model.getValue("/root/reqData/fwdData/file_path");  
				//alert(file_path +"_2");
				//window.exec(file_path);
				if(ext == ".doc" || ext == ".docx" || ext == ".DOC" || ext == ".DOCX" )
				{	
					window.exec("WINWORD.exe", '\"'+file_path+ '\"');
				}
				else if(ext == ".xls" || ext == ".xlsx" || ext == ".XLS" || ext == ".XLSX" )
				{
					window.exec("excel.exe", '\"'+file_path+ '\"');
				}
				else if(ext == ".jpg" || ext == ".jpeg" || ext == ".JPG" || ext == ".JPEG" )
				{
					window.exec("mspaint.exe", '\"'+file_path+ '\"');
				}
				else if(ext == ".hwp" || ext == ".HWP")
				{
					window.exec("Hwp.exe", '\"'+file_path+ '\"');
				} 
				else if(ext == ".pdf" || ext == ".PDF")
				{	
					//window.exec(file_path);
					//window.exec("AcroRd32.exe", file_path);
					window.exec("AcroRd32.exe", '\"'+file_path+ '\"');
					
				}
			]]>
		</script>
	</xhtml:body>
</xhtml:html>
