						<setlData>
						</setlData>
						<reqForm>
							<frdt/>
							<todt/>
							<multiUpData/>
						</reqForm>
					</reqData>
					<resData>
						<!-- 전달 받은 데이터를 담당 ( submit의 결과가 담김) -->
						<!-- 전달 받은 formData를 담당 ( submit의 결과가 담김) -->
						<!-- 전달 받은 데이터를 가공할 임시저장소 ( submit의 결과가 담김) -->
						<!-- 전달 받은 errorCode를 담당 ( submit의 결과가 담김) -->
						<!-- 전달 받은 errorMsg를 담당 ( submit의 결과가 담김) -->
						<gridData>
							<!-- 전달 받은 grid데이터를 담당 ( submit의 결과가 담김) -->
							<record>
								<!-- datagrid1 -->
							</record>
							<!-- datagrid2 -->
							<!-- datagrid3 -->
						</gridData>
						<resForm>
						</resForm>
						<msg/>
					</resData>
					<tempData/>
				</root>
			</instance>
			<script type="javascript">
				<![CDATA[
					function makeVal(){
						this.label = "";
						this.value = "";
						this.setMakeVal = setMakeVal;
					}
					
					function setMakeVal(iLabel, iValue){
						this.label = iLabel;
						this.value = iValue;
					}
				]]>
			</script>
			<script type="javascript" ev:event="xforms-ready">
				<![CDATA[
					model.removenode("/root/resData/gridData/record");
					model.setValue("/root/reqData/searchData/clos_yymm", getDate("yyyymm"));
					//model.send("mt_outsdelmt_1000");
					//model.copyNode("/root/initData/comboSet/outsd_elmt_clsf", "/root/tempData/outsd_elmt_clsf");
					//model.copyNode("/root/initData/comboSetNode", "/root/tempData/comboSetNode");
					
					
					var search_clsf_arr = new Array();
					var mail_host_arr = new Array();
					
					search_clsf_arr[0] = new makeVal();
					search_clsf_arr[0].setMakeVal("51", "51");
					search_clsf_arr[1] = new makeVal();
					search_clsf_arr[1].setMakeVal("52", "52");
					search_clsf_arr[2] = new makeVal();
					search_clsf_arr[2].setMakeVal("53", "53");
					search_clsf_arr[3] = new makeVal();
					search_clsf_arr[3].setMakeVal("54", "54");
					
					mail_host_arr[0] = new makeVal();
					mail_host_arr[0].setMakeVal("칼라", "1");
					mail_host_arr[1] = new makeVal();
					mail_host_arr[1].setMakeVal("흑백", "2");
					
					for (var i=0; i<search_clsf_arr.length; i++){
						if (i==0){
							model1.setValue("/root/initData/comboSet/ecnt/item/label", search_clsf_arr[i].label);
							model1.setValue("/root/initData/comboSet/ecnt/item/value", search_clsf_arr[i].value);
						} else {
							model1.makeNode("/root/initData/comboSet/ecnt/item[" + (i + 1) + "]/label");
							model1.makeNode("/root/initData/comboSet/ecnt/item[" + (i + 1) + "]/value");
							model1.setValue("/root/initData/comboSet/ecnt/item[" + (i + 1) + "]/label", search_clsf_arr[i].label);
							model1.setValue("/root/initData/comboSet/ecnt/item[" + (i + 1) + "]/value", search_clsf_arr[i].value);
						}
					}
					
					for (var i=0; i<mail_host_arr.length; i++){
						if (i==0){
							model1.setValue("/root/initData/comboSet/clr_clsf/item/label", mail_host_arr[i].label);
							model1.setValue("/root/initData/comboSet/clr_clsf/item/value", mail_host_arr[i].value);
						} else {
							model1.makeNode("/root/initData/comboSet/clr_clsf/item[" + (i + 1) + "]/label");
							model1.makeNode("/root/initData/comboSet/clr_clsf/item[" + (i + 1) + "]/value");
							model1.setValue("/root/initData/comboSet/clr_clsf/item[" + (i + 1) + "]/label", mail_host_arr[i].label);
							model1.setValue("/root/initData/comboSet/clr_clsf/item[" + (i + 1) + "]/value", mail_host_arr[i].value);
						}
					}
					
					model1.refresh();
				]]>
			</script>
			<submission id="pr_papmake_2100" action="/mt/papmake/2100" mediatype="application/x-www-form-urlencoded" method="post" ref="/root/reqData/searchData" resultref="/root/tempData"/>
			<submission id="pr_papmake_2101" action="/mt/papmake/2101" mediatype="application/x-www-form-urlencoded" method="post" ref="/root/reqData/reqForm" resultref="/root/tempData"/>
		</model>
