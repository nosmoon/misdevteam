			<caption id="caption6" class="list_cap02" style="left:89px; top:0px; width:531px; height:26px; text-align:center; "/>
			<input id="input1" ref="/root/reqData/searchData/issu_dt" inputtype="date" style="left:95px; top:4px; width:100px; height:18px; "/>
			<caption id="caption3" class="list_cap01" style="left:310px; top:0px; width:90px; height:26px; text-align:center; ">인쇄일자</caption>
			<input id="input2" ref="/root/reqData/searchData/prt_dt" inputtype="date" style="left:405px; top:4px; width:100px; height:18px; "/>
		</group>
		<group id="group_btnG2" class="gro_btn" style="left:10px; top:115px; width:620px; height:294px; ">
			<textarea id="textarea1" ref="/root/reqData/reqForm/ref_matt" style="left:0px; top:0px; width:620px; height:279px; text-align:left; vertical-align:top; "/>
		</group>
		<group id="group_1" class="gro_sel" style="left:10px; top:45px; width:620px; height:22px; ">
			<button id="btnA4" class="btn02" style="left:565px; top:0px; width:52px; height:21px; ">
				<caption>종료</caption>
				<script type="javascript" ev:event="onclick">
					<![CDATA[
				      window.close();
				     ]]>
				</script>
			</button>
			<button id="button2" class="btn02" style="left:400px; top:0px; width:52px; height:21px; ">
				<caption>저장</caption>
				<script type="javascript" ev:event="onclick">
					<![CDATA[
						var issu_dt 	= model.getValue("/root/reqData/searchData/issu_dt");
						var prt_dt	= model.getValue("/root/reqData/searchData/prt_dt");
						
						if (issu_dt == ""){
							alert("발행일자를 입력해주십시오.");
							return;
						}
						if (prt_dt == ""){
							alert("인쇄일자를 입력해주십시오.");
							return;
						}
												
						model.setValue("/root/reqData/reqForm/issu_dt", issu_dt);
						model.setValue("/root/reqData/reqForm/prt_dt", prt_dt);
						
						model.send("pr_prtexec_5034");
						
						if(submit_completed()) {
							alert("저장되었습니다.");
							model.send("pr_prtexec_5033");
							model.setValue("/root/reqData/reqForm/ref_matt", model.getValue("/root/tempData/ref_matt/val"));
							textarea1.refresh();
						}
					]]>
				</script>
			</button>
			<button id="button3" class="btn02" style="left:510px; top:0px; width:52px; height:21px; ">
				<caption>초기화</caption>
				<script type="javascript" ev:event="onclick">
					<![CDATA[
						model1.reset();
						model.setValue("/root/reqData/reqForm/mode", "I");
					]]>
				</script>
			</button>
			<button id="button1" class="btn02" style="left:345px; top:0px; width:52px; height:21px; ">
				<caption>조회</caption>
				<script type="javascript" ev:event="onclick">
					<![CDATA[
						model.send("pr_prtexec_5033");
						model.setValue("/root/reqData/reqForm/ref_matt", model.getValue("/root/tempData/ref_matt/val"));
						textarea1.refresh();
						if (model.getValue("/root/reqData/reqForm/ref_matt") == ""){
							model.setValue("/root/reqData/reqForm/mode", "I");
						} else {
							model.setValue("/root/reqData/reqForm/mode", "U");
						}
					]]>
				</script>
			</button>
			<button id="button4" class="btn02" style="left:455px; top:0px; width:52px; height:21px; ">
				<caption>삭제</caption>
				<script type="javascript" ev:event="onclick">
					<![CDATA[
						var issu_dt 	= model.getValue("/root/reqData/searchData/issu_dt");
						var prt_dt	= model.getValue("/root/reqData/searchData/prt_dt");
						
						if (issu_dt == ""){
							alert("발행일자를 입력해주십시오.");
							return;
						}
						if (prt_dt == ""){
							alert("인쇄일자를 입력해주십시오.");
							return;
						}
												
						model.setValue("/root/reqData/reqForm/issu_dt", issu_dt);
						model.setValue("/root/reqData/reqForm/prt_dt", prt_dt);
						model.setValue("/root/reqData/reqForm/mode", "D");
						model.send("pr_prtexec_5034");
						
						if(submit_completed()) {
							alert("삭제되었습니다.");
							model.send("pr_prtexec_5033");
							model.setValue("/root/reqData/reqForm/ref_matt", model.getValue("/root/tempData/ref_matt/val"));
							textarea1.refresh();
						}
					]]>
				</script>
			</button>
